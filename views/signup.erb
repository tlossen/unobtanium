<h1>signup 1</h1>

<% @form.errors.each do |error| %>
  <%= error %>
<% end %>

<% form_tag "/signup" do %>
  <p>
    <%= label_tag "email" %>
    <%= text_field_tag "email", :value => @form.params[:email] %>
  </p>
  <p>
    <%= label_tag "password" %>
    <%= password_field_tag "password" %>
  </p>
  <p>
    <%= submit_tag 'go' %>
  </p>
<% end %>